global:
  resolve_timeout: 5m

route:
  group_by: ['alertname', 'severity']
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 4h
  receiver: 'discord-channel'

receivers:
  - name: 'discord-channel'
    discord_configs:
      - webhook_url: 'DISCORD_URL_PLACEHOLDER'
        send_resolved: true
        title: '{{ if eq .Status "firing" }}ðŸ”¥ ALERT: {{ else }}âœ… RESOLVED: {{ end }}{{ .CommonLabels.alertname }}'
        message: |-
          {{ range .Alerts }}
          **Status:** {{ .Status }}
          **Severity:** {{ .Labels.severity }}
          {{ .Annotations.description }}
          ---
          {{ end }}